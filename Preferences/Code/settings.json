{
    "editor.minimap.enabled": false,
    "files.trimTrailingWhitespace": true,
    "telemetry.telemetryLevel": "off",
    "terminal.external.osxExec": "iTerm.app",
    "workbench.colorTheme": "Juicy (rainglow)",
    "workbench.preferredDarkColorTheme": "Juicy (rainglow)",
    "workbench.fontAliasing": "auto",
    "workbench.colorCustomizations": {
        "focusBorder": "#3b3b3b",
        "statusBar.background": "#1d1d1d",
        "statusBar.noFolderBackground": "#1d1d1d",

        // iTerm dark theme
        "terminal.background":"#000000",
        "terminal.foreground":"#c7c7c7",
        "terminal.ansiBlack":"#000000",
        "terminal.ansiBlue":"#0225c7",
        "terminal.ansiBrightBlack":"#676767",
        "terminal.ansiBrightBlue":"#6871ff",
        "terminal.ansiBrightCyan":"#5ffdff",
        "terminal.ansiBrightGreen":"#5ff967",
        "terminal.ansiBrightMagenta":"#ff76ff",
        "terminal.ansiBrightRed":"#ff6d67",
        "terminal.ansiBrightWhite":"#feffff",
        "terminal.ansiBrightYellow":"#fefb67",
        "terminal.ansiCyan":"#00c5c7",
        "terminal.ansiGreen":"#00c200",
        "terminal.ansiMagenta":"#c930c7",
        "terminal.ansiRed":"#c91b00",
        "terminal.ansiWhite":"#c7c7c7",
        "terminal.ansiYellow":"#c7c400",
    },
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "workbench.settings.useSplitJSON": true,
    "git.branchSortOrder": "alphabetically",
    "git.enableStatusBarSync": false,
    "breadcrumbs.icons": false,
    "explorer.decorations.badges": false,
    "explorer.decorations.colors": false,
    "outline.icons": false,
    "workbench.iconTheme": null,
    "editor.suggest.showIcons": false,
    "git.countBadge": "off",
    "scm.countBadge": "off",
    "git.decorations.enabled": false,
    "breadcrumbs.enabled": false,
    "emmet.triggerExpansionOnTab": true,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "intelephense.phpdoc.returnVoid": false,
    "php.validate.enable": false,
    "intelephense.telemetry.enabled": false,
    "files.insertFinalNewline": true,
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
